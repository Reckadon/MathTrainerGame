<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFDFDF"
    android:gravity="center_horizontal"
    android:padding="10dp">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Difficulty from the Main Screen."
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Press the Start Button"
            android:textColor="@color/bg" />

        <ImageView
            android:layout_width="139dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/start_button_pic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="144dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="You have 60 seconds to answer as many Questions as possible"
            android:textColor="@color/bg" />

        <ImageView
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/timer_pic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="193dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Giving a correct answer will fetch you points!"
            android:textColor="@color/bg" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/points_pic" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:gravity="center"
        android:text="Different difficulties fetch you different amount of points!"
        android:textColor="@color/colorPrimary" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Easy-Addition and Subtraction upto numbers 100            Points:10"
        android:textColor="@color/bg"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Medium-Addition,Subtraction upto numbers 500 and multiplication upto numbers 15                                              Points:20"
        android:textColor="@color/bg"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Hard-Addition,Subtraction upto numbers 1000 and multiplication upto numbers 50                                              Points:30"
        android:textColor="@color/bg"/>\\

</LinearLayout>